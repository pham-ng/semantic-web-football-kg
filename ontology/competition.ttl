@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

# Competition hierarchy using standard vocabularies
kg:Competition a owl:Class ;
  rdfs:label "Competition"@en , "Giải đấu"@vi ;
  rdfs:comment "Football competition or tournament"@en ;
  rdfs:subClassOf schema:SportsOrganization .

kg:League a owl:Class ;
  rdfs:label "League"@en , "Giải VĐQG"@vi ;
  rdfs:comment "League competition"@en ;
  rdfs:subClassOf kg:Competition ,
                  schema:SportsLeague .

kg:Cup a owl:Class ;
  rdfs:label "Cup"@en , "Cúp"@vi ;
  rdfs:comment "Cup competition"@en ;
  rdfs:subClassOf kg:Competition ,
                  schema:SportsEvent .

kg:Tournament a owl:Class ;
  rdfs:label "Tournament"@en , "Giải đấu"@vi ;
  rdfs:comment "Tournament competition"@en ;
  rdfs:subClassOf kg:Competition ,
                  schema:SportsEvent .

# Season
kg:Season a owl:Class ;
  rdfs:label "Season"@en , "Mùa giải"@vi ;
  rdfs:comment "Football season"@en ;
  rdfs:subClassOf time:TemporalEntity .

kg:hasSeason a owl:ObjectProperty ;
  rdfs:label "has season"@en , "có mùa giải"@vi ;
  rdfs:comment "Competition has seasons"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range kg:Season ;
  owl:inverseOf kg:seasonOf ;
  rdfs:subPropertyOf schema:hasPart .

kg:seasonOf a owl:ObjectProperty ;
  rdfs:label "season of"@en , "mùa của"@vi ;
  rdfs:comment "Season belongs to competition"@en ;
  rdfs:domain kg:Season ;
  rdfs:range kg:Competition ;
  rdfs:subPropertyOf schema:partOf .

kg:seasonStart a owl:DatatypeProperty ;
  rdfs:label "season start"@en , "bắt đầu mùa"@vi ;
  rdfs:comment "Start date of the season"@en ;
  rdfs:domain kg:Season ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf time:hasBeginning .

kg:seasonEnd a owl:DatatypeProperty ;
  rdfs:label "season end"@en , "kết thúc mùa"@vi ;
  rdfs:comment "End date of the season"@en ;
  rdfs:domain kg:Season ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf time:hasEnd .

# Participation
kg:participatesIn a owl:ObjectProperty ;
  rdfs:label "participates in"@en , "tham dự"@vi ;
  rdfs:comment "Team participates in a season"@en ;
  rdfs:domain kg:Team ;
  rdfs:range kg:Season ;
  rdfs:subPropertyOf schema:memberOf .

# Competition properties
kg:tier a owl:DatatypeProperty ;
  rdfs:label "tier"@en , "hạng"@vi ;
  rdfs:comment "Level or tier of the competition"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range xsd:positiveInteger .

kg:organizes a owl:ObjectProperty ;
  rdfs:label "organizes"@en , "tổ chức"@vi ;
  rdfs:comment "Organization organizes a competition"@en ;
  rdfs:domain kg:Organization ;
  rdfs:range kg:Competition ;
  owl:inverseOf kg:organizedBy .

kg:organizedBy a owl:ObjectProperty ;
  rdfs:label "organized by"@en , "được tổ chức bởi"@vi ;
  rdfs:comment "Competition is organized by organization"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range kg:Organization .

kg:heldIn a owl:ObjectProperty ;
  rdfs:label "held in"@en , "tổ chức tại"@vi ;
  rdfs:comment "Competition is held in a country"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range kg:Country .

kg:participantCount a owl:DatatypeProperty ;
  rdfs:label "participant count"@en , "số đội tham gia"@vi ;
  rdfs:comment "Number of participating teams"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range xsd:positiveInteger .

kg:forAgeGroup a owl:ObjectProperty ;
  rdfs:label "for age group"@en , "dành cho độ tuổi"@vi ;
  rdfs:comment "Competition is for specific age group"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range kg:AgeGroup .

kg:AgeGroup a owl:Class ;
  rdfs:label "Age Group"@en , "Nhóm tuổi"@vi ;
  rdfs:comment "Age group for competition"@en ;
  rdfs:subClassOf schema:Enumeration .

kg:Organization a owl:Class ;
  rdfs:label "Organization"@en , "Tổ chức"@vi ;
  rdfs:comment "Sports organization"@en ;
  rdfs:subClassOf schema:Organization .

kg:competitionName a owl:DatatypeProperty ;
  rdfs:label "competition name"@en , "tên giải đấu"@vi ;
  rdfs:comment "Official name of the competition"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:name .

kg:competitionType a owl:ObjectProperty ;
  rdfs:label "competition type"@en , "loại giải đấu"@vi ;
  rdfs:comment "Type of competition (league, cup, etc.)"@en ;
  rdfs:domain kg:Competition ;
  rdfs:range kg:CompetitionType .

kg:CompetitionType a owl:Class ;
  rdfs:label "Competition Type"@en , "Loại giải đấu"@vi ;
  rdfs:comment "Type of football competition"@en ;
  rdfs:subClassOf schema:Enumeration .

# Domestic vs International
kg:DomesticCompetition a owl:Class ;
  rdfs:label "Domestic Competition"@en , "Giải đấu trong nước"@vi ;
  rdfs:subClassOf kg:CompetitionType .

kg:InternationalCompetition a owl:Class ;
  rdfs:label "International Competition"@en , "Giải đấu quốc tế"@vi ;
  rdfs:subClassOf kg:CompetitionType .

@prefix dbo: <http://dbpedia.org/ontology/> .

### LỚP NỀN 
kg:Team a owl:Class ; rdfs:subClassOf dbo:SportsTeam ;
  rdfs:label "Đội bóng"@vi , "Team"@en .
kg:Country a owl:Class ; rdfs:subClassOf dbo:Country ;
  rdfs:label "Quốc gia"@vi , "Country"@en .
kg:Organization rdfs:subClassOf dbo:Organisation .

### ALIGN LỚP — GIỮ schema/time, THÊM dbo
kg:Competition rdfs:subClassOf dbo:SportsTournament .
kg:League      rdfs:subClassOf dbo:SoccerLeague .
kg:Cup         rdfs:subClassOf dbo:SportsTournament .
kg:Tournament  rdfs:subClassOf dbo:SportsTournament .
kg:Season      rdfs:subClassOf dbo:SoccerLeagueSeason .

### ALIGN THUỘC TÍNH — GIỮ schema/time, THÊM dbo
kg:hasSeason   rdfs:subPropertyOf dbo:season .
kg:seasonOf    rdfs:subPropertyOf dbo:season .
kg:seasonStart rdfs:subPropertyOf dbo:startDate .
kg:seasonEnd   rdfs:subPropertyOf dbo:endDate .
kg:participatesIn rdfs:subPropertyOf dbo:team .
kg:organizes   rdfs:subPropertyOf dbo:organiser .
kg:organizedBy rdfs:subPropertyOf dbo:organiser .
kg:heldIn      rdfs:subPropertyOf dbo:country .
kg:participantCount rdfs:subPropertyOf dbo:numberOfTeams .
kg:competitionName rdfs:subPropertyOf rdfs:label

